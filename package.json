{
  "name": "claude-code-telemetry",
  "version": "3.0.0",
  "description": "Telemetry server for Claude Code - captures observability data and forwards to Langfuse for LLM monitoring",
  "main": "src/server.js",
  "bin": {
    "claude-telemetry": "./src/server.js"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "LOG_LEVEL=debug node src/server.js",
    "test": "jest --forceExit",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "SKIP_INTEGRATION_TESTS=true jest",
    "test:manual": "./scripts/manual-test.sh",
    "lint": "eslint src test --ext .js",
    "lint:fix": "eslint src test --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "docker:build": "docker build -t claude-code-telemetry .",
    "docker:run": "docker-compose up",
    "clean": "rm -rf test-results test-runs *.log"
  },
  "keywords": [
    "claude",
    "langfuse",
    "observability",
    "telemetry",
    "llm",
    "monitoring",
    "anthropic",
    "bridge",
    "logging",
    "analytics"
  ],
  "author": "Raphael Fraysse & Claude",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lainra/claude-code-telemetry.git"
  },
  "bugs": {
    "url": "https://github.com/lainra/claude-code-telemetry/issues"
  },
  "homepage": "https://github.com/lainra/claude-code-telemetry#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "src/",
    "docs/",
    "scripts/",
    "test/fixtures/",
    "README.md",
    "CLAUDE.md",
    "LICENSE",
    ".env.example"
  ],
  "dependencies": {
    "@grpc/grpc-js": "^1.12.5",
    "@grpc/proto-loader": "^0.7.13",
    "@opentelemetry/otlp-transformer": "^0.57.0",
    "dotenv": "^17.2.1",
    "langfuse": "^3.38.4",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "protobufjs": "^7.4.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2"
  }
}
